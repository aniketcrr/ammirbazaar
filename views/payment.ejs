<%- include('header'); -%>

<style>

#payment{
    height: 300px;
    text-align: center;
  }

.btn{
    height: 30px;
    width: 300px;
    border-radius: 5px;
    background-color: aqua;
  }
</style>

<section id="payment">

    <div class="page">

      
        <button id="rzp-button1" class="btn">Pay with Razorpay</button>
</div>
</section>



<script src="https://checkout.razorpay.com/v1/checkout.js"></script>
<script>

var options = {
    "key": '<%= orderId.key %>', // Enter the Key ID generated from the Dashboard
    "amount": "5000", // Amount is in currency subunits. Default currency is INR. Hence, 50000 refers to 50000 paise
    "currency": "INR",
    "name": "Ammirbazaar",
    "description": "Test Transaction",

    "order_id": '<%= orderId.orderid %>', //This is a sample Order ID. Pass the `id` obtained in the response of Step 1
    "callback_url": "/download",
    "prefill": {
        "name": '<%= orderId.name %>' ,
        "email": '<%= orderId.email %>' ,
        "contact": '<%= orderId.contact %>' ,
    },
    "notes": {
        "address": "Razorpay Corporate Office"
    },
    "theme": {
        "color": "#3399cc"
    }
};
   

    var rzp1 = new Razorpay(options);
    document.getElementById('rzp-button1').onclick = function (e) {
        rzp1.open();
        e.preventDefault();
    }
    </script>
 

 <%- include('footer'); -%>